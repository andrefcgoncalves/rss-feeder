{
  "name": "gemini-rss-generator",
  "version": "1.0.0",
  "description": "Serverless Gemini-powered RSS feed generator using Firebase Cloud Functions",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "eslint src/**/*.ts",
    "test": "jest"
  },
  "engines": {
    "node": "18"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^18.15.0",
    "@types/rss": "^0.0.32",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.31.0",
    "eslint-plugin-import": "^2.27.5",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.17.1",
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^4.3.1",
    "rss": "^1.2.2"
  },
  "private": true
}
